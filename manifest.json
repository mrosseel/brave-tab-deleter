{
  "manifest_version": 3,
  "name": "Tab Deleter",
  "version": "1.2.1",
  "description": "Manage tabs from a sidebar panel with auto-grouping, custom groups, and drag-and-drop organization.",
  "permissions": [
    "tabs",
    "tabGroups",
    "sidePanel",
    "storage"
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "Open Tab Deleter",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
